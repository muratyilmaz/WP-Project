@using ServiceMS.Helpers
@model List<ServiceMS.Models.Db.service_request>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Servis Kayıtları";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h3 class="mb-0">Servis Kayıtları</h3>
            <div class="text-muted small">Tüm servis kayıtlarını bu sayfadan görüntüleyebilir ve yönetebilirsiniz.</div>
        </div>

        <a href="/ServiceRequests/Create" class="btn btn-primary">
            + Yeni Servis Kaydı
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <span class="fw-semibold">Kayıt Listesi</span>
            <span class="text-muted small">Toplam: @Model.Count</span>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-light">
                    <tr>
                        <th>Takip Kodu</th>
                        <th>Müşteri</th>
                        <th>Telefon</th>
                        <th>Cihaz</th>
                        <th>Durum</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                    </thead>

                    <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                Henüz kayıt yok.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var r in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@r.tracking_code</td>
                                <td>@r.customer_name</td>
                                <td>@r.customer_phone</td>
                                <td>@r.device_name</td>
                                <td>
                                    <span class="badge @ServiceStatusHelper.StatusBadgeClass(r.status)">
                                        @ServiceStatusHelper.ToText(r.status)
                                    </span>
                                </td>
                                <td class="text-end">
                                    <a class="btn btn-outline-secondary btn-sm" href="/ServiceRequests/Details/@r.id">Detay</a>
                                    <a class="btn btn-primary btn-sm" href="/ServiceRequests/Edit/@r.id">Düzenle</a>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
