@using ServiceMS.Models.Db
@model service_request

@{
    Layout = "_Layout";
    var techs = ViewBag.Technicians as List<user> ?? new List<user>();
    var returnUrl = (string?)Context.Request.Query["returnUrl"];
    if (string.IsNullOrWhiteSpace(returnUrl))
    {
        returnUrl = Context.Request.Headers["Referer"].ToString();
    }
}

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a href="@(string.IsNullOrWhiteSpace(returnUrl) ? "/ServiceRequests" : returnUrl)" class="btn btn-outline-secondary btn-sm">
            ← Geri Dön
        </a>

        <div class="d-flex align-items-center gap-2">
            <span class="text-muted small">Takip Kodu:</span>
            <span class="fw-semibold">@Model.tracking_code</span>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-0">Kaydı Düzenle</h5>
                    <div class="text-muted small">Servis No: #@Model.id</div>
                </div>

                <span class="badge bg-light text-dark border">Düzenleme</span>
            </div>
        </div>

        <div class="card-body">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form action="/ServiceRequests/Edit" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.id" />
                <input type="hidden" name="returnUrl" value="@returnUrl" />

                <div class="row g-3">

                    <div class="col-12 col-md-6">
                        <label class="form-label">Müşteri İsim</label>
                        <input type="text"
                               class="form-control"
                               name="customer_name"
                               value="@Model.customer_name"
                               placeholder="Müşteri ismi" />
                    </div>

                    <div class="col-12 col-md-6">
                        <label class="form-label">Müşteri Telefon</label>
                        <input type="text"
                               class="form-control"
                               name="customer_phone"
                               value="@Model.customer_phone"
                               placeholder="05xx xxx xx xx" />
                    </div>

                    <div class="col-12 col-md-6">
                        <label class="form-label">Cihaz</label>
                        <input type="text"
                               class="form-control"
                               name="device_name"
                               value="@Model.device_name"
                               placeholder="Örn: iPhone 13 / Dell Inspiron" />
                    </div>

                    <div class="col-12 col-md-6">
                        <label class="form-label">Durum</label>
                        <select class="form-select" name="status">
                            <option value="0" selected="@(Model.status == 0)">Açık</option>
                            <option value="1" selected="@(Model.status == 1)">İşlemde</option>
                            <option value="2" selected="@(Model.status == 2)">Tamamlandı</option>
                            <option value="3" selected="@(Model.status == 3)">Teslim Edildi</option>
                        </select>
                    </div>

                    <div class="col-12">
                        <label class="form-label">Açıklama</label>
                        <textarea class="form-control"
                                  name="issue_description"
                                  rows="5"
                                  placeholder="Arıza / talep detayını yazın...">@Model.issue_description</textarea>
                    </div>

                    <div class="col-12">
                        <label class="form-label">Atanan Teknisyen</label>
                        <select class="form-select" name="assigned_technician_id">
                            <option value="">— Seçilmedi —</option>

                            @foreach (var t in techs)
                            {
                                var isSelected = (Model.assigned_technician_id != null && t.id == Model.assigned_technician_id);
                                <option value="@t.id" selected="@(isSelected)">@t.username</option>
                            }
                        </select>
                        <div class="form-text">Seçim yapılmaz ise atama kaldırılır.</div>
                    </div>

                    <div class="col-12 d-flex gap-2 justify-content-end pt-2">
                        <a class="btn btn-outline-secondary"
                           href="@(string.IsNullOrWhiteSpace(returnUrl) ? "/ServiceRequests/Details/" + Model.id : returnUrl)">
                            İptal
                        </a>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>

                </div>
            </form>
        </div>
    </div>

</div>
