@using ServiceMS.Helpers
@model List<ServiceMS.Models.Db.service_request>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Teknisyen İşleri";
}

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h3 class="mb-0">Teknisyen İş Listem</h3>
            <div class="text-muted small">Size atanmış servis kayıtlarını bu sayfadan takip edebilirsiniz.</div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <span class="fw-semibold">İş Listesi</span>
            <span class="text-muted small">Toplam: @Model.Count</span>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-light">
                    <tr>
                        <th>Takip Kodu</th>
                        <th>Müşteri</th>
                        <th>Cihaz</th>
                        <th>Durum</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                    </thead>

                    <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                Size atanmış kayıt bulunmuyor.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@item.tracking_code</td>
                                <td>@item.customer_name</td>
                                <td>@item.device_name</td>
                                <td>
                                    <span class="badge @ServiceStatusHelper.StatusBadgeClass(item.status)">
                                        @ServiceStatusHelper.ToText(item.status)
                                    </span>
                                </td>
                                <td class="text-end">
                                    <a class="btn btn-primary btn-sm" href="/MyJobs/Detail/@item.id">Detay / Güncelle</a>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
