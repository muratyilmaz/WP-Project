@using ServiceMS.Models.Db
@model List<user>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Kullanıcılar";
}

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h3 class="mb-0">Kullanıcılar</h3>
            <div class="text-muted small">Sistemde tanımlı kullanıcıları bu sayfadan yönetebilirsiniz.</div>
        </div>

        <a href="/Users/Create" class="btn btn-primary">
            + Yeni Kullanıcı
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <span class="fw-semibold">Kullanıcı Listesi</span>
            <span class="text-muted small">Toplam: @Model.Count</span>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Kullanıcı Adı</th>
                        <th>Rol</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                    </thead>

                    <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">
                                Henüz kullanıcı yok.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var u in Model)
                        {
                            <tr>
                                <td>@u.id</td>
                                <td class="fw-semibold">@u.username</td>
                                <td>
                                    <span class="badge bg-secondary">@u.role</span>
                                </td>
                                <td class="text-end">
                                    <form action="/Users/Delete/@u.id" method="post" style="display:inline;" 
                                          onsubmit="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash"></i> Sil
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
